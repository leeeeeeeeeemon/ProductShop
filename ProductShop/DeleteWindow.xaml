<Window x:Class="ProductShop.DeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductShop"
        mc:Ignorable="d"
        Title="DeleteWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Вы действительно хотите удалить продукт?" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1"/>
        <Button x:Name="OkBtn" Content="Да" Grid.Row="2" HorizontalAlignment="Center"  Width="130" Height="30" VerticalAlignment="Center" Click="OkBtn_Click" />
        <Button x:Name="NoBtn" Content="Нет" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center"  Width="130" Height="30" VerticalAlignment="Center" Click="NoBtn_Click" />
    </Grid>
</Window>
